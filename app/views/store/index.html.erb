<h1>Whitney's Store</h1>


<table class="w3-table-all">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= button_to 'Add to Cart', line_items_path(product_id: product) , class:"w3-button w3-light-blue" %></td>
        <td><%= link_to 'Show', product , class:"w3-button w3-light-blue" %></td>
        <td><%= link_to 'Edit', edit_product_path(product) , class:"w3-button w3-light-blue" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-light-blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Product', new_product_path , class:"w3-button w3-light-blue" %>
